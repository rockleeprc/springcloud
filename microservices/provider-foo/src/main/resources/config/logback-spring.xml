<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg %n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <springProfile name="dev">
            <File>D:/data/microservices/provider_foo.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>D:/data/microservices/provider_foo.%d.%i.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>200MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <encoder>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg%n
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </springProfile>
        <springProfile name="prod">
            <File>/data/repast/repoast_pos_helper.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/data/repast/repoast_pos_helper.%d.%i.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>200MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <encoder>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg%n
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </springProfile>
    </appender>

    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
        </root>
        <logger name="com.yuneke.mapper" level="DEBUG">
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="org.springframework" level="DEBUG">
            <appender-ref ref="FILE"/>
        </logger>
    </springProfile>
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
        <logger name="com.yuneke.mapper" level="INFO">
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="org.springframework" level="INFO">
            <appender-ref ref="FILE"/>
        </logger>
    </springProfile>
</configuration>
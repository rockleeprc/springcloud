<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg %n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <springProfile name="dev">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <File>D:/data/microservices/consumer_foo.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>D:/data/microservices/consumer_foo.%d.%i.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>30GB</totalSizeCap>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>20MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <encoder>
                <pattern class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg%n
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        <appender name="asyncFileAppender" class="ch.qos.logback.classic.AsyncAppender">
            <discardingThreshold>0</discardingThreshold>
            <queueSize>500</queueSize>
            <appender-ref ref="FILE"/>
        </appender>
    </springProfile>

    <springProfile name="prod">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <File>/data/repast/consumer_foo.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/data/repast/consumer_foo.%d.%i.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>200MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <encoder>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %p ${PID:- } [%thread] %logger{60} - %msg%n
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="asyncFileAppender"/>
        </root>
        <logger name="com.yuneke.mapper" level="DEBUG">
            <!--<appender-ref ref="FILE"/>-->
            <appender-ref ref="asyncFileAppender"/>
        </logger>
        <logger name="org.springframework" level="DEBUG">
            <!--<appender-ref ref="FILE"/>-->
            <appender-ref ref="asyncFileAppender"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="asyncFileAppender"/>
        </root>
        <logger name="com.yuneke.mapper" level="INFO">
            <appender-ref ref="asyncFileAppender"/>
        </logger>
        <logger name="org.springframework" level="INFO">
            <appender-ref ref="asyncFileAppender"/>
        </logger>
    </springProfile>
</configuration>